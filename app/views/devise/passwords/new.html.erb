<h2 class="text-center mt-4">
  <i class="fas fa-lock"></i> Forgot Your Password?
</h2>

<div class="container d-flex justify-content-center mt-3">
  <div class="card p-4 shadow-lg rounded animate__animated animate__fadeIn">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "needs-validation", novalidate: true }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Send Reset Instructions", class: "btn btn-primary btn-lg animate__animated animate__pulse animate__infinite" %>
      </div>
    <% end %>
  </div>
</div>

<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
</div>
