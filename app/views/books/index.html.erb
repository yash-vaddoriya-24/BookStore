<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Library Management</title>


  <style>
      body {
          background: radial-gradient(circle at top, #121212, #1a1a1a);
          color: white;
      }
      .hero {
          background: url('https://source.unsplash.com/1600x900/?library,books') no-repeat center center/cover;
          height: 50vh;
          display: flex;
          align-items: center;
          justify-content: center;
          text-align: center;
          color: white;
          font-size: 2rem;
          font-weight: bold;
          position: relative;
          animation: fadeIn 2s ease-in-out;
      }
      .hero-overlay {
          background: rgba(0, 0, 0, 0.6);
          position: absolute;
          top: 0; left: 0; width: 100%; height: 100%;
      }
      .hero-content {
          z-index: 2;
          position: relative;
      }
      .table-container {
          background: rgba(255, 255, 255, 0.1);
          backdrop-filter: blur(10px);
          border-radius: 15px;
          padding: 20px;
      }
  </style>
</head>
<body class="bg-dark">
<nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
  <div class="container">
    <a class="navbar-brand" href="#">üìö Library Management System</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto d-flex gap-2">
        <li class="nav-item">
          <a class="btn btn-outline-light" href="#">üè† Home</a>
        </li>
        <% if user_signed_in? && current_user.has_role?(:admin) %>
          <li class="nav-item">
            <a href="<%= new_book_path %>" class="btn btn-warning">‚ûï Add Book</a>
          </li>
        <% end %>

        <li class="nav-item">
          <a class="btn btn-info" href="#">‚Ñπ About Us</a>
        </li>
        <li class="nav-item">
          <%= button_to "üö™ Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger", data: {turbo_confirm: "Are You sure want to Logout" } %>
        </li>
      </ul>
    </div>

  </div>
</nav>


<div class="hero" data-turbo-permanent>
  <div class="hero-overlay"></div>
  <div class="hero-content" data-aos="fade-up">
    <h1>Welcome to the Library üìñ</h1>
    <p>Discover, Read, and Explore a World of Books!</p>
    <a href="<%= new_book_path %>" class="btn btn-warning btn-lg mt-3">Add New Book</a>
  </div>
</div>

<div class="container mt-5 table-container">
  <%= render "search_form" %>
  <h2 class="text-center mb-4 text-primary">üìö Available Books</h2>
  <% if @books.any? %>
    <!-- ‚úÖ Pagination Info -->
    <p class="text-light"><%= page_entries_info @books %></p>

    <!-- ‚úÖ Books Table -->
    <turbo-frame id="books">
      <table class="table table-dark table-hover">
        <thead>
        <tr>
          <th>ID</th>
          <th>Book Name</th>
          <th>Author</th>
          <th>ISBN</th>
          <th>Price (‚Çπ)</th>
          <th>View</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
        </thead>
        <tbody id="bookList">
        <% @books.each_with_index do |book, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.isbn %></td>
            <td><%= book.price %></td>
            <td>
              <%= link_to "View", preview_book_path(book), class: "btn btn-primary btn-sm", data: {turbo_frame: "_top"} %>
            </td>
            <td>
              <%= link_to "Edit", edit_book_path(book), class: "btn btn-warning btn-sm", data: { turbo_frame: "_top" } %>
            </td>
            <td>
              <%= button_to 'Delete', book_path(book),
                            method: :delete,
                            data: { turbo_confirm: 'Are you sure?' },
                            class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </turbo-frame>

    <!-- ‚úÖ Pagination Links -->
    <div class="d-flex justify-content-between">
      <%= link_to_previous_page @books, '‚¨Ö Previous Page', class: "btn btn-outline-light" %>
      <%= link_to_next_page @books, 'Next Page ‚û°', class: "btn btn-outline-light" %>
    </div>
  <% else %>
    <div class="alert alert-warning text-center">
      <h4>No books found.</h4>
      <a href="<%= new_book_path %>" class="btn btn-success mt-3">Add a New Book</a>
    </div>
  <% end %>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
<script>
    AOS.init();

    function filterBooks() {
        let input = document.getElementById('searchInput').value.toLowerCase();
        let rows = document.querySelectorAll('#bookList tr');
        rows.forEach(row => {
            let title = row.cells[1].innerText.toLowerCase();
            row.style.display = title.includes(input) ? '' : 'none';
        });
    }

    document.addEventListener("turbo:before-morph", (event) => {
        console.log("Morphing is about to start:", event.target);
    });

    document.addEventListener("turbo:after-morph", (event) => {
        console.log("Morphing is completed:", event.target);
    });


</script>
</body>
</html>
